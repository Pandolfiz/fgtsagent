  "shortcuts": [
    {
      "name": "Nova conversa",
      "short_name": "Nova conversa",
      "description": "Iniciar uma nova conversa",
      "url": "/?action=new-chat",
      "icons": [
        {
          "src": "/shortcut-new-chat.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Buscar mensagens",
      "short_name": "Buscar",
      "description": "Buscar mensagens",
      "url": "/?action=search",
      "icons": [
        {
          "src": "/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Configurações",
      "short_name": "Config",
      "description": "Acessar configurações",
      "url": "/?action=settings",
      "icons": [
        {
          "src": "/shortcut-settings.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+chat",
      "url": "/?chat=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/?action=upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "video/*": [".mp4", ".webm", ".avi", ".mov"],
        "audio/*": [".mp3", ".wav", ".ogg", ".m4a"],
        "application/pdf": [".pdf"],
        "text/*": [".txt", ".md"]
      }
    }
  ],
  "share_target": {
    "action": "/?action=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "video/*", "audio/*", "application/pdf", "text/*"]
        }
      ]
    }
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
}
