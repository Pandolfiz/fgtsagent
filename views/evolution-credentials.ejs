<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
  <h1><%= title %></h1>
  <div class="container mt-4">
    <% if (messages.success && messages.success.length) { %>
      <div class="alert alert-success"><%= messages.success[0] %></div>
    <% } %>
    <% if (messages.error && messages.error.length) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>

    <% if (!credentials || credentials.length === 0) { %>
      <p>Nenhuma credencial encontrada. Crie uma nova abaixo:</p>
      <form action="/evolution-credentials" method="post">
        <div class="mb-3">
          <label for="phone" class="form-label">Telefone (WhatsApp)</label>
          <input type="text" id="phone" name="phone" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Criar Credencial</button>
      </form>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Telefone</th>
            <th>Instance Name</th>
            <th>API Key</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% credentials.forEach(function(cred) { %>
            <tr>
              <td><%= cred.phone %></td>
              <td><%= cred.instance_name %></td>
              <td><%= cred.partner_secret %></td>
              <td>
                <form action="/evolution-credentials/<%= cred.id %>/setup" method="post" style="display:inline-block;">
                  <button type="submit" class="btn btn-primary">Conectar</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <a href="/dashboard" class="btn btn-secondary mt-3">Voltar</a>
    <% } %>
  </div>
</body>
</html> 