<!-- Conteúdo renderizado no layout padrão -->

<div class="container-fluid py-4 px-md-5">
  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h1>Credenciais V8</h1>
      <a href="/partner-credentials/new" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> Nova Credencial
      </a>
    </div>
  </div>
  <% if (credentials.length) { %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Grant Type</th>
          <th>Username</th>
          <th>Audience</th>
          <th>Scope</th>
          <th>Client ID</th>
          <th class="text-end">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% credentials.forEach(function(cred) { %>
          <tr>
            <td><%= cred.grant_type %></td>
            <td><%= cred.username %></td>
            <td><%= cred.audience || '-' %></td>
            <td><%= cred.scope || '-' %></td>
            <td><%= cred.client_id || '-' %></td>
            <td class="text-end">
              <a href="/partner-credentials/<%= cred.id %>" class="btn btn-sm btn-outline-secondary me-1">
                <i class="fas fa-edit"></i>
              </a>
              <form action="/partner-credentials/<%= cred.id %>/delete" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Confirma deletar?');">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <div class="alert alert-info">Nenhuma credencial cadastrada.</div>
  <% } %>
</div>

<!-- Página finaliza, footer do layout será inserido automaticamente --> 