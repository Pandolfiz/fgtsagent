<!-- Conteúdo renderizado dentro do layout padrão -->
<div class="container-fluid py-4 px-md-5">
  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h1><%= title %></h1>
    </div>
  </div>
  <form action="<%= action %>" method="POST">
    <div class="mb-3">
      <label for="grant_type" class="form-label">Grant Type</label>
      <input type="text" id="grant_type" name="grant_type" class="form-control" value="<%= credential.grant_type || '' %>" required>
    </div>
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" id="username" name="username" class="form-control" value="<%= credential.username || '' %>" required>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" id="password" name="password" class="form-control" value="<%= credential.password || '' %>" required>
    </div>
    <div class="mb-3">
      <label for="audience" class="form-label">Audience</label>
      <input type="text" id="audience" name="audience" class="form-control" value="<%= credential.audience || '' %>">
    </div>
    <div class="mb-3">
      <label for="scope" class="form-label">Scope</label>
      <input type="text" id="scope" name="scope" class="form-control" value="<%= credential.scope || '' %>">
    </div>
    <div class="mb-3">
      <label for="client_id" class="form-label">Client ID</label>
      <input type="text" id="client_id" name="client_id" class="form-control" value="<%= credential.client_id || '' %>">
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/partner-credentials" class="btn btn-secondary ms-2">Cancelar</a>
  </form>
</div>
<!-- Footer é inserido automaticamente pelo layout --> 