# ==============================================
# CONFIGURAÇÕES DO STRIPE
# ==============================================

# Chave secreta do Stripe (obrigatória)
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_sua_chave_secreta_de_producao_aqui

# Chave pública do Stripe (obrigatória)
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_live_sua_chave_publica_de_producao_aqui

# Secret do webhook do Stripe (obrigatório)
# Obtenha em: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_seu_webhook_secret_aqui

# ==============================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ==============================================

# Ambiente da aplicação
NODE_ENV=production

# Porta da aplicação
PORT=3000

# URL da aplicação
APP_URL=https://fgtsagent.com.br

# ==============================================
# CONFIGURAÇÕES DO SUPABASE
# ==============================================

# URL do projeto Supabase
SUPABASE_URL=https://seu-projeto.supabase.co

# Chave anônima do Supabase
SUPABASE_ANON_KEY=sua_chave_anonima_do_supabase

# Chave de serviço do Supabase
SUPABASE_SERVICE_KEY=sua_chave_de_servico_do_supabase

# JWT Secret do Supabase
SUPABASE_JWT_SECRET=sua_jwt_secret_do_supabase

# ==============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==============================================

# Secret para sessões
SESSION_SECRET=sua_chave_secreta_super_forte_de_pelo_menos_32_caracteres

# Secret para JWT
JWT_SECRET=sua_jwt_secret_key_muito_segura_aqui

# ==============================================
# CONFIGURAÇÕES DE LOG
# ==============================================

# Nível de log
LOG_LEVEL=info

# Habilitar logging de requisições
ENABLE_REQUEST_LOGGING=true

# ==============================================
# CONFIGURAÇÕES DE EMAIL
# ==============================================

# Email de notificação
NOTIFICATION_EMAIL_FROM=noreply@fgtsagent.com.br
NOTIFICATION_EMAIL_TO=admin@fgtsagent.com.br

# ==============================================
# CONFIGURAÇÕES DO WHATSAPP
# ==============================================

# Token de acesso do WhatsApp
WHATSAPP_ACCESS_TOKEN=seu_token_do_whatsapp

# URL da Evolution API
EVOLUTION_API_URL=https://sua_evolution_api.com

# Chave da Evolution API
EVOLUTION_API_KEY=sua_chave_da_evolution_api

# Versão da API do WhatsApp
WHATSAPP_API_VERSION=v16.0

# URL base da API do WhatsApp
WHATSAPP_API_BASE_URL=https://graph.facebook.com

# Token de verificação do webhook
WHATSAPP_WEBHOOK_VERIFY_TOKEN=seu_token_de_verificacao

# ==============================================
# CONFIGURAÇÕES DO REDIS (OPCIONAL)
# ==============================================

# URL do Redis
# REDIS_URL=redis://localhost:6379

# ==============================================
# CONFIGURAÇÕES DE BACKUP (OPCIONAL)
# ==============================================

# Dias de retenção de backup
# BACKUP_RETENTION_DAYS=30
